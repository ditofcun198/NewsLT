@{
    Layout = null;
    var adminName = User.Identity.IsAuthenticated ? User.Identity.Name : "Admin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/admin.css" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-light py-3">Admin Panel</div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Dashboard</a>
                <a href="@Url.Action("Index", "Articles", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Bài viết</a>
                <a href="@Url.Action("Index", "Categories", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Danh mục</a>
                <a href="@Url.Action("Index", "Comments", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Bình luận</a>
                <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Người dùng</a>
                <a href="@Url.Action("Index", "Orders", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Đơn hàng</a>
                <a href="@Url.Action("Index", "MembershipPlans", new { area = "Admin" })" class="list-group-item list-group-item-action bg-dark text-light">Gói thành viên</a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown">
                                @adminName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Profile", "Account")">Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid mt-3">
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
